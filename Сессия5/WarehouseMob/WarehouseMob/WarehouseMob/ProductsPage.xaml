<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WarehouseMob.ProductsPage">

    <!-- Фиолетовый фон -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4A148C" Offset="0.1" />
            <!-- Темно-фиолетовый -->
            <GradientStop Color="#7B1FA2" Offset="0.5" />
            <!-- Фиолетовый -->
            <GradientStop Color="#AB47BC" Offset="1.0" />
            <!-- Светло-фиолетовый -->
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Список складов -->
            <CollectionView Grid.Row="0"
                            x:Name="warehouseCollectionView"
                            SelectionChanged="OnWarehouseSelected"
                            SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Карточка для каждого склада -->
                        <Frame BackgroundColor="White" 
                               CornerRadius="10" 
                               Padding="15" 
                               Margin="0, 10" 
                               HasShadow="True">
                            <StackLayout>
                                <Label Text="{Binding Название}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="Black"/>
                                <Label Text="{Binding Адрес}"
                                       FontSize="13"
                                       TextColor="Gray"/>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </ScrollView>
</ContentPage>