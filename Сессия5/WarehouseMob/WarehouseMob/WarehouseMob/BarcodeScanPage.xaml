<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms"
             x:Class="WarehouseMob.BarcodeScanPage">

    <!-- Фиолетовый фон -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#4A148C" Offset="0.1" />
            <!-- Темно-фиолетовый -->
            <GradientStop Color="#7B1FA2" Offset="0.5" />
            <!-- Фиолетовый -->
            <GradientStop Color="#AB47BC" Offset="1.0" />
            <!-- Светло-фиолетовый -->
        </LinearGradientBrush>
    </ContentPage.Background>

    <ScrollView>
        <StackLayout Padding="20">

            <!-- Сканер штрих-кодов -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="0" 
                   Margin="0, 10" 
                   HasShadow="True">
                <zxing:ZXingScannerView x:Name="scannerView"
                                        OnScanResult="Handle_OnScanResult"
                                        IsScanning="True"
                                        IsAnalyzing="True"
                                        VerticalOptions="FillAndExpand"
                                        HorizontalOptions="FillAndExpand"
                                        HeightRequest="300"/>
            </Frame>

            <!-- Результат сканирования -->
            <Frame BackgroundColor="White" 
                   CornerRadius="10" 
                   Padding="15" 
                   Margin="0, 20" 
                   HasShadow="True">
                <Label x:Name="resultLabel"
                       Text="Наведите камеру на штрих-код"
                       HorizontalOptions="Center"
                       VerticalOptions="Center"
                       FontSize="Medium"
                       TextColor="Black"/>
            </Frame>

            <!-- Кнопка для ручного ввода -->
            <Button Text="Ввести штрих-код вручную"
                    Clicked="OnManualInputClicked"
                    Margin="0, 20"
                    FontSize="Large"
                    HeightRequest="60"
                    BackgroundColor="#E040FB" 
                    TextColor="White"
                    CornerRadius="30"
                    FontAttributes="Bold"
                    HorizontalOptions="FillAndExpand"
                 
               
                BorderColor="White"
             
                BorderWidth="2">
                <Button.Triggers>
                    <!-- Анимация при нажатии -->
                    <EventTrigger Event="Clicked">
                             </EventTrigger>
                </Button.Triggers>
            </Button>

        </StackLayout>
    </ScrollView>
</ContentPage>