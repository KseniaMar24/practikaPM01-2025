<Window x:Class="AvtoSklad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AvtoSklad"
        mc:Ignorable="d"
        Title="Окно авторизации" Height="400" Width="550" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#FFE6E6FA">
    <!-- Светло-фиолетовый фон -->

    <Window.Resources>
        <!-- Стиль для кнопки -->
        <Style x:Key="ModernButtonTheme" TargetType="Button">
            <Setter Property="Background" Value="#9370DB"/>
            <!-- Фиолетовый цвет -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontStyle" Value="Italic"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7B68EE"/>
                                <!-- Темнее при наведении -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Задний фон с градиентом -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FFE6E6FA" Offset="0"/>
                <!-- Светло-фиолетовый -->
                <GradientStop Color="#FFD8BFD8" Offset="1"/>
                <!-- Более насыщенный фиолетовый -->
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Заголовок -->
        <Label Content="Авторизация" 
               HorizontalAlignment="Center" 
               Margin="0,30,0,0" 
               VerticalAlignment="Top" 
               FontWeight="Bold" 
               FontStyle="Italic" 
               FontSize="36" 
               Foreground="#4B0082"/>
        <!-- Темно-фиолетовый текст -->

        <!-- Поле для логина -->
        <Label Content="Логин:" 
               HorizontalAlignment="Left" 
               Margin="50,100,0,0" 
               VerticalAlignment="Top" 
               FontWeight="Bold" 
               FontStyle="Italic" 
               FontSize="24" 
               Foreground="#4B0082"/>
        <!-- Темно-фиолетовый текст -->

        <TextBox x:Name="lg" 
                 HorizontalAlignment="Left" 
                 Margin="170,110,0,0" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Top" 
                 Width="330" 
                 Height="40" 
                 FontSize="18" 
                 BorderBrush="#9370DB" 
                 BorderThickness="2" 
                 Padding="5" 
                 Background="#FFF8F8FF"/>
            <!-- Светлый фон -->

            <!-- Поле для пароля -->
            <Label Content="Пароль:" 
               HorizontalAlignment="Left" 
               Margin="50,180,0,0" 
               VerticalAlignment="Top" 
               FontWeight="Bold" 
               FontStyle="Italic" 
               FontSize="24" 
               Foreground="#4B0082"/>
            <!-- Темно-фиолетовый текст -->

            <PasswordBox x:Name="pr" 
                     HorizontalAlignment="Left" 
                     Margin="170,190,0,0" 
                     VerticalAlignment="Top" 
                     Width="330" 
                     Height="40" 
                     FontSize="18" 
                     BorderBrush="#9370DB" 
                BorderThickness="2" 
                     Padding="5" 
                     Background="#FFF8F8FF"/>
                <!-- Светлый фон -->

                <!-- Кнопка "Вход" -->
                <Button x:Name="Next" 
                Content="Вход" 
                Style="{StaticResource ModernButtonTheme}" 
                HorizontalAlignment="Center" 
                Margin="0,280,0,0" 
                VerticalAlignment="Top" 
                Width="450" 
                Height="60" 
                Click="Next_Click"/>
    </Grid>
</Window>