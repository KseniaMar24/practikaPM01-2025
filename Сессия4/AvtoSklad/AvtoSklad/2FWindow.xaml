<Window x:Class="AvtoSklad._2FWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AvtoSklad"
        mc:Ignorable="d"
        
        Title="Окно двухфакторной аутентификации" 
        Height="400" Width="550" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#FFE6E6FA">
        <!-- Светло-фиолетовый фон -->

        <Window.Resources>
            <!-- Стиль для кнопки -->
            <Style x:Key="ModernButtonTheme" TargetType="Button">
                <Setter Property="Background" Value="#800080"/>
                <!-- Фиолетовый цвет -->
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontSize" Value="24"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="FontStyle" Value="Italic"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10"
                                BorderThickness="0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#4B0082"/>
                                    <!-- Темнее при наведении -->
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Window.Resources>

        <Grid>
            <!-- Задний фон с градиентом -->
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFE6E6FA" Offset="0"/>
                    <!-- Светло-фиолетовый -->
                    <GradientStop Color="#FFD8BFD8" Offset="1"/>
                    <!-- Более насыщенный фиолетовый -->
                </LinearGradientBrush>
            </Grid.Background>

            <!-- Заголовок -->
            <Label Content="Введите ваш 2FA токен:" 
               HorizontalAlignment="Left" 
               Margin="50,95,0,0" 
               VerticalAlignment="Top" 
               FontWeight="Bold" 
               FontStyle="Italic" 
               FontSize="24" 
               Foreground="#4B0082"/>
            <!-- Темно-фиолетовый текст -->

            <!-- Поле для ввода токена -->
            <TextBox x:Name="SecretWord" 
                 HorizontalAlignment="Center" 
                 TextWrapping="Wrap" 
                 VerticalAlignment="Center" 
                 Width="450" 
                 Height="40" 
                 FontSize="18" 
                 BorderBrush="#800080" 
                 BorderThickness="2" 
                 Padding="5" 
                 Background="#FFF8F8FF"/>
            <!-- Светлый фон -->

            <!-- Кнопка "Вход" -->
            <Button x:Name="Author" 
                Style="{StaticResource ModernButtonTheme}" 
                Content="Вход" 
                HorizontalAlignment="Center" 
                Margin="0,280,0,0" 
                VerticalAlignment="Top" 
                FontSize="36" 
                Width="450" 
                Height="60" 
                Click="Author_Click"/>
        </Grid>
    </Window>