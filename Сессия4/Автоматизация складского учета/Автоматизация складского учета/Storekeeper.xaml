<Window x:Class="Автоматизация_складского_учета.Storekeeper"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Автоматизация_складского_учета"
        mc:Ignorable="d"
        Title="Окно кладовщика" Height="460" Width="480" Background="#99FF99">
    <Grid>
        <TabControl>
            <!-- Вкладка "Приходная накладная" -->
            <TabItem Header="Приходная накладная">
                <Grid Background="#99FF99">
                    <StackPanel Margin="10">
                        <TextBlock Text="Товар:" FontWeight="Bold" FontStyle="Italic"/>
                        <ComboBox x:Name="cbProductIncoming" DisplayMemberPath="Название" Margin="0,5,0,10"/>

                        <TextBlock Text="Количество:" FontWeight="Bold" FontStyle="Italic"/>
                        <TextBox x:Name="txtQuantityIncoming" Margin="0,5,0,10"/>

                        <TextBlock Text="Дата поступления:" FontWeight="Bold" FontStyle="Italic"/>
                        <DatePicker x:Name="dpDateIncoming" Margin="0,5,0,10"/>

                        <TextBlock Text="Поставщик:" FontWeight="Bold" FontStyle="Italic"/>
                        <ComboBox x:Name="cbSupplier" DisplayMemberPath="Название" Margin="0,5,0,10"/>

                        <Button Content="Оформить приходную накладную"  Style="{StaticResource ModernButtonTheme}" Click="CreateIncomingInvoice_Click" HorizontalAlignment="Center" Padding="10,5" Background=" #3EB489" FontWeight="Bold" FontStyle="Italic"/>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка "Расходная накладная" -->
            <TabItem Header="Расходная накладная">
                <Grid Background="#99FF99">
                    <StackPanel Margin="10">
                        <TextBlock Text="Товар:" FontWeight="Bold" FontStyle="Italic"/>
                        <ComboBox x:Name="cbProductOutgoing" DisplayMemberPath="Название" Margin="0,5,0,10"/>

                        <TextBlock Text="Количество:" FontWeight="Bold" FontStyle="Italic"/>
                        <TextBox x:Name="txtQuantityOutgoing" Margin="0,5,0,10"/>

                        <TextBlock Text="Дата отгрузки:" FontWeight="Bold" FontStyle="Italic"/>
                        <DatePicker x:Name="dpDateOutgoing" Margin="0,5,0,10"/>

                        <TextBlock Text="Клиент:" FontWeight="Bold" FontStyle="Italic"/>
                        <ComboBox x:Name="cbClient" DisplayMemberPath="Название" Margin="0,5,0,10"/>

                        <Button Content="Оформить расходную накладную"  Style="{StaticResource ModernButtonTheme}" Click="CreateOutgoingInvoice_Click" HorizontalAlignment="Center" Padding="10,5" Background=" #3EB489" FontWeight="Bold" FontStyle="Italic"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Штрихкод">
                <Grid Background="#99FF99">
                    <StackPanel Margin="10">
                        <TextBlock Text="Товар:" FontWeight="Bold" FontStyle="Italic"/>
                        <ComboBox x:Name="cbProductBarcode" DisplayMemberPath="Название" Margin="0,5,0,10" />

                        <Button Content="Сгенерировать штрихкод" Click="GenerateBarcode_Click"  Style="{StaticResource ModernButtonTheme}" Margin="0,10,0,0" Background=" #3EB489" FontWeight="Bold" FontStyle="Italic" Height="27"/>
                        <Image x:Name="imgBarcode" Margin="0,10,0,0" Width="200" Height="130"/>
                        <Button Content="Печать штрихкода"  Style="{StaticResource ModernButtonTheme}" Click="PrintBarcode_Click" Margin="0,10,0,0" Background=" #3EB489" FontWeight="Bold" FontStyle="Italic" Height="28"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Отчет по инвентаризации">
                <Grid Background="#99FF99">
                    <StackPanel Margin="10">
                        <DataGrid x:Name="dgInventoryReport" AutoGenerateColumns="True" Margin="0,10,0,0"/>
                        <Button Content="Экспорт в Excel"  Style="{StaticResource ModernButtonTheme}" Click="ExportInventoryReport_Click" HorizontalAlignment="Right" Margin="0,10,0,0" Padding="10,5" Background=" #3EB489" FontWeight="Bold" FontStyle="Italic"/>
                    </StackPanel>
                </Grid>
            </TabItem>
            <TabItem Header="Профиль пользователя">
                <Grid Background="#99FF99">
                    <StackPanel Margin="10">
                        <!-- Информация о текущем пользователе -->
                        <TextBlock x:Name="UserInfoLabel" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" />

                        <!-- Поле для имени пользователя -->
                        <TextBlock Text="Имя пользователя:" FontWeight="Bold" FontStyle="Italic" />
                        <TextBox x:Name="UserNameTextBox" Margin="0,5,0,10" />

                        <!-- Поле для email -->
                        <TextBlock Text="Email:" FontWeight="Bold" FontStyle="Italic" />
                        <TextBox x:Name="EmailTextBox" Margin="0,5,0,10" />

                        <!-- Поле для нового пароля -->
                        <TextBlock Text="Новый пароль:" FontWeight="Bold" FontStyle="Italic" />
                        <PasswordBox x:Name="PasswordBox" Margin="0,5,0,10" />

                        <!-- Фотография пользователя -->
                        <TextBlock Text="Фотография:" FontWeight="Bold" FontStyle="Italic" />
                        <Image x:Name="UserPhoto" Width="100" Height="100" Margin="0,5,0,10" />
                        <Button Content="Загрузить фото"  Style="{StaticResource ModernButtonTheme}" Click="UploadPhoto_Click" HorizontalAlignment="Left" Background="#3EB489" FontWeight="Bold" FontStyle="Italic" />

                        <!-- Кнопка для сохранения изменений -->
                        <Button Content="Сохранить" Click="SaveProfile_Click"  Style="{StaticResource ModernButtonTheme}" HorizontalAlignment="Left" Background="#3EB489" FontWeight="Bold" FontStyle="Italic" />
                        <Button Content="Выйти" Click="Logout_Click"  Style="{StaticResource ModernButtonTheme}" Background="#FF6347" FontWeight="Bold" FontStyle="Italic" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>