<Window x:Class="Автоматизация_складского_учета.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Автоматизация_складского_учета"
        mc:Ignorable="d"
              Title="Окно авторизации" Height="400" Width="550" Background=" #99FF99">
    <Grid>
        <Label Content="Логин:" HorizontalAlignment="Left" Margin="50,106,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="24"/>
        <Label Content="Пароль:" HorizontalAlignment="Left" Margin="50,188,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="24"/>
        <PasswordBox x:Name="pr" HorizontalAlignment="Left" Margin="170,200,0,0" VerticalAlignment="Top" Width="330" Height="30"/>
        <TextBox x:Name="lg" HorizontalAlignment="Left" Margin="170,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="330" Height="30"/>
        <Label Content="Авторизация" HorizontalAlignment="Center" Margin="0,33,0,0" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="36"/>
        <Button x:Name="Next" Content="Далее" Style="{StaticResource ModernButtonTheme}" HorizontalAlignment="Center" Margin="0,295,0,0" VerticalAlignment="Top" FontStyle="Italic" FontWeight="Bold" FontSize="36" Width="450" Background=" #3EB489" Click="Next_Click"/>

    </Grid>
</Window>
